<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kapil.ecomm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.kapil.ecomm.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.kapil.ecomm.notes.AllNotesActivity"
            android:label="@string/title_activity_all_notes"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.kapil.ecomm.addnote.AddEditNoteActivity"
            android:label="@string/title_activity_all_notes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.kapil.ecomm.orderlifecycle.AllOrdersActivity"
            android:label="@string/all_orders"
            android:theme="@style/AppTheme.NoActionBar"
            >
        </activity>

        <activity
            android:name="com.kapil.ecomm.orderlifecycle.CancelledOrderActivity"
            android:label="@string/title_activity_cancelled_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.kapil.ecomm.orderlifecycle.DeliveryActivity"
            android:label="@string/title_activity_delivery"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.kapil.ecomm.orderlifecycle.OrderReceivedActivity"
            android:label="@string/title_activity_order_received"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>